%h1 Create New User

= form_tag users_path do

  = label :user, :username, 'Username'
  = text_field :user, 'username'

  = label :user, :email, 'Email'
  = text_field :user, 'email'

  = label :user, :first_name, 'First Name'
  = text_field :user, 'first_name'

  = label :user, :last_name, 'Last Name'
  = text_field :user, 'last_name'

  = label :user, :password, 'Password'
  = password_field :user, 'password'

  = label :user, :password_confirmation, 'Password Confirmation'
  = password_field :user, 'password_confirmation'

  = label :user, :total_score, 'Total Score'
  = text_field :user, 'total_score', :readonly => true , :value => '0'

  = label :user, :role,'Role'
  = text_field :user, 'role', :readonly => true, :value => 'user'
  %br
  = submit_tag 'Save Changes'
