-# edit.html.haml using partial

%h1 Edit Existing User

= form_tag user_path(@user), :method => :put do

  = label :user, :username, 'Username'
  = text_field :user, 'username'

  = label :user, :email, 'Email'
  = text_field :user, 'email'

  = label :user, :first_name, 'First Name'
  = text_field :user, 'first_name'

  = label :user, :last_name, 'Last Name'
  = text_field :user, 'last_name'

  = label :user, :last_name, 'Last Name'
  = text_field :user, 'last_name'
  
  = label :user, :password, ''
  = text_field :user, 'password'

  = label :user, :password_confirmation, ''
  = text_field :user, 'password_confirmation'

  = submit_tag 'Update User Info'

= button_to 'Delete', user_path(@user), :method => :delete, :confirm => 'Are you sure?'
